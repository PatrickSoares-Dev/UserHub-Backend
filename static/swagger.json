{
  "openapi": "3.0.0",
  "info": {
    "title": "API UserHUB",
    "description": "Uma API de Gerenciamento de Usuários projetada para lidar com informações de usuários e departamentos, incluindo criação, recuperação, atualização e exclusão.",
    "version": "1.0.0",
    "contact": {
      "name": "Patrick Oliveira",
      "email": "patrickoliveiramoto@gmail.com",
      "url": "https://www.linkedin.com/in/patricksoares-dev/"
    }
  },
  "tags": [
    {
      "name": "Autenticação",
      "description": "Operações relacionadas à autenticação"
    },
    {
      "name": "Usuários",
      "description": "Operações relacionadas a usuários"
    },
    {
      "name": "Departamentos",
      "description": "Operações relacionadas a departamentos"
    }    
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "paths": {
    "/api/auth/login": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Autenticar usuário",
        "description": "Autentica o usuário com email e senha, retornando um token JWT.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "Email do usuário"
                  },
                  "senha": {
                    "type": "string",
                    "description": "Senha do usuário"
                  }
                },
                "required": ["email", "senha"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Autenticação bem-sucedida",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "Token JWT para autenticação"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas"
          }
        }
      }
    },
    "/api/auth/alterar_senha": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Alterar senha do usuário",
        "description": "Permite que um usuário autenticado altere sua senha.",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nova_senha": {
                    "type": "string",
                    "description": "Nova senha do usuário"
                  }
                },
                "required": ["nova_senha"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Senha alterada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "response": {
                      "type": "string",
                      "example": "Senha alterada com sucesso"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos"
          },
          "403": {
            "description": "Token não fornecido ou inválido"
          }
        }
      }
    },
    "/api/usuarios": {
      "get": {
        "tags": ["Usuários"],
        "summary": "Recuperar todos os usuários",
        "description": "Busca uma lista de todos os perfis de usuário armazenados no sistema.",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Uma lista de perfis de usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer",
                        "description": "Identificador único para o usuário"
                      },
                      "nome": {
                        "type": "string",
                        "description": "Nome completo do usuário"
                      },
                      "email": {
                        "type": "string",
                        "description": "Endereço de email do usuário"
                      },
                      "tipo_usuario": {
                        "type": "string",
                        "description": "Tipo de usuário; por exemplo, admin, usuário"
                      },
                      "departamento": {
                        "type": "string",
                        "description": "Departamento ao qual o usuário está associado, se houver",
                        "nullable": true
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autorizado - token inválido ou não fornecido"
          }
        }
      }
    },
